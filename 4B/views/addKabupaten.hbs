{{> header}}
{{> navbar}}

<h3 class="form-title text-center mt-2">Insert Kabupaten</h3>
<div class=" mt-2">
    <form class="form-group was-validated w-100" action="/add-kabupaten" method="post" enctype="multipart/form-data">
        {{#if message}}
        <div class="alert alert-{{message.type}}" role="alert">
        {{message.message}}
        </div>
         {{/if}}

        <div class="form-input-group mt-4 mb-3">
            <label for="provinsi" class="form-label">Provinsi</label>
            <select type="text" class="form-control is-invalid w-75" id="provinsi" name="provinsi" required>
                {{#each provinces}}
                <option value="{{this.id}}">{{this.nama}}</option>
                {{/each}}
            </select>
        </div>
        
        <div class="form-input-group mb-3">
            <label for="namakabupaten" class="form-label">Nama Kabupaten</label>
            <input type="text" class="form-control is-invalid w-75" id="namaKabupaten" name="nama" required></input>
        </div>

        <div class="form-input-group mb-3">
            <label for="diresmikan" class="form-label">Tanggal Diresmikan</label>
            <input type="date" class="form-control is-invalid w-75" id="diresmikan" name="diresmikan" required></input>
        </div>
        
        <div class="form-input-group mb-3">
            <label for="image" class="form-label">Photo</label>
            <input type="file" class="form-control is-invalid w-75" id="image" name="image" required></input>
        </div>

        <div class="mb-3 ">
            <button class="btn btn-primary mt-2 w-50 position-relative bottom-0 start-50 translate-middle-x" type="submit">Add Kabupaten</button>
        </div>
        
    </form>
</div>


{{> footer}}