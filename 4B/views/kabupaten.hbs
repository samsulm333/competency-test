{{> pageMenu}}


           {{#if message}}
        <div class="alert alert-{{message.type}} w-75" role="alert">
        {{message.message}}
        </div>
         {{/if}}

        <h3 class="text-center mt-2" style="color: white;">Provinsi</h3>
        <a href="/add-kabupaten" type="button" class="add btn btn-primary ms-4 mt-2 mb-2">+ Add Kabupaten</a>
        <table class="table table-hover ms-3 text-center" style="background: white;">
        <tr>
            <th>No</th>
            <th>Image</th>
            <th>Nama Kabupaten</th>
            <th>Tanggal Diresmikan</th>  
            <th>Provinsi</th> 
            <th>Action</th> 
        </tr>
        {{#each kabupaten}}
        <tr>
            <td>{{this.id}}</td>
            <td><img src="{{this.photo}}" style="width: 30px; height: 30px"></td>
            <td>{{this.nama}}</td>
            <td>{{this.diresmikan}}</td>
            <td>{{this.provinsi}}</td>
            <td>
            <a href="/edit-kabupaten/{{this.id}}" type="button" class="btn btn-primary me-1">Edit</a>
            <a href="/delete-kabupaten/{{this.id}}" type="button" class="btn btn-danger">Delete</a>
            </td> 
        </tr>
        {{/each}}
        
        </table>
    </div>
</div>

{{> footer}}
