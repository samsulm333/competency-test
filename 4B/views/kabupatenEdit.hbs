{{> header}}
{{> navbar}}

<h3 class="form-title text-center mt-2">Edit Kabupaten</h3>
<div class=" mt-2">
     {{#with kabupaten}}
    <form class="form-group was-validated w-100" action="/edit-kabupaten/{{this.id}}" method="post" >
        {{#if message}}
        <div class="alert alert-{{message.type}}" role="alert">
        {{message.message}}
        </div>
         {{/if}}

        
       
        <div class="form-input-group mb-3">
            <label for="namakabupaten" class="form-label">Nama Kabupaten</label>
            <input type="text" class="form-control is-invalid w-75" id="namaKabupaten" name="nama" value={{this.nama}} required></input>
        </div>

        <div class="form-input-group mb-3">
            <label for="diresmikan" class="form-label">Tanggal Diresmikan</label>
            <input type="date" class="form-control is-invalid w-75" id="diresmikan" name="diresmikan" value="{{this.diresmikan}}" required></input>
        </div>
        
        <div class="form-input-group mb-3">
            <label for="image" class="form-label">Photo</label>
            <input type="file" class="form-control is-invalid w-75" id="image" name="image" required></input>
        </div>

        <div class="mb-3 ">
            <button class="btn btn-primary mt-2 w-50 position-relative bottom-0 start-50 translate-middle-x" type="submit">Edit Kabupaten</button>
        </div>
        {{/with}}
        
    </form>
</div>


{{> footer}}